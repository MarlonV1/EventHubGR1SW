{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // ðŸ‘ˆ Necesario para Jest
    "moduleResolution": "node", // ðŸ‘ˆ MÃ¡s compatible con Jest
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // ðŸ‘ˆ Recomendado para JSX moderno
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.setup.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
}
